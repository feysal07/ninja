<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="entityManager" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.homeninja.entities.SiteUsers</class>

        <class>com.homeninja.entities.Address</class>
        <class>com.homeninja.entities.MasterDataValue</class>

        <class>com.homeninja.entities.ContactUs</class>
        <class>com.homeninja.entities.ContactPurpose</class>

        <class>com.homeninja.entities.AdvanceSetting</class>
        <class>com.homeninja.entities.AdvanceSettingUserMap</class>

        <class>com.homeninja.entities.UsersSearch</class>
        <class>com.homeninja.entities.UserType</class>

        <class>com.homeninja.entities.JobCategory</class>
        <class>com.homeninja.entities.JobSubCategory</class>
        <class>com.homeninja.entities.UserJobCategoryMap</class>
        <class>com.homeninja.entities.UserJobSubCategoryMap</class>
        <class>com.homeninja.entities.JobsSubCategoryMap</class>
        <class>com.homeninja.entities.Jobs</class>
        <class>com.homeninja.entities.MessageLimits</class>
        <class>com.homeninja.entities.UserCompanyMap</class>

        <class>com.homeninja.entities.BlogPost</class>
        <class>com.homeninja.entities.BlogTags</class>
        <class>com.homeninja.entities.Comment</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>