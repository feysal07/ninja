CREATE TABLE `site_users` (
  `userId` bigint(20) NOT NULL AUTO_INCREMENT,
  `aboutMe` varchar(255) DEFAULT NULL,
  `createdDate` datetime DEFAULT NULL,
  `firstName` varchar(255) DEFAULT NULL,
  `gender` varchar(255) DEFAULT NULL,
  `isActive` varchar(255) DEFAULT NULL,
  `lastName` varchar(255) DEFAULT NULL,
  `loginEmail` varchar(255) DEFAULT NULL,
  `loginViaFB` varchar(255) DEFAULT NULL,
  `modifiedDate` datetime DEFAULT NULL,
  `myFavoriteStyle` varchar(255) DEFAULT NULL,
  `nextProject` varchar(255) DEFAULT NULL,
  `password` varchar(255) DEFAULT NULL,
  `phoneNumber` varchar(255) DEFAULT NULL,
  `profilPic` longblob,
  `userName` varchar(255) DEFAULT NULL,
  `userType` bigint(20) NOT NULL,
  `addressId` bigint(20) DEFAULT NULL,
  PRIMARY KEY (`userId`),
  KEY `FK26AFFF109603CDC6` (`addressId`),
  CONSTRAINT `FK26AFFF109603CDC6` FOREIGN KEY (`addressId`) REFERENCES `address` (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=183 DEFAULT CHARSET=utf8;


delimiter $$
CREATE TRIGGER site_users_trigger
AFTER INSERT ON site_users
FOR EACH ROW
BEGIN
INSERT INTO users_search (userId,userName,userType) 
values(new.userId, new.username,new.userType);
END$$
delimiter ;